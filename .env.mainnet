# =============================================================================
# Backr Environment Variables - MainNet
# =============================================================================

# App
NODE_ENV=production
PORT=4001
LOG_LEVEL=warn
CORS_ORIGINS=https://backr.canton.hashrupt.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://backr:backr@localhost:5432/backr

# Canton Network - MainNet
CANTON_LEDGER_HOST=ledger.canton.hashrupt.com
CANTON_LEDGER_PORT=443
CANTON_USE_TLS=true
# CANTON_AUTH_TOKEN=  # Set via Keycloak token exchange

# Keycloak - MainNet
KEYCLOAK_URL=https://iam.validator.canton.hashrupt.com/cloak
KEYCLOAK_REALM=canton-validator-1
KEYCLOAK_CLIENT_ID=validator-backend

# Validator / Scan-Proxy (CIP-56) - MainNet
VALIDATOR_HOST=https://cantara.validator.canton.hashrupt.com

# Token Standard API - MainNet
TOKEN_STANDARD_URL=https://api.utilities.digitalasset.com

# Backr-specific
DEFAULT_FEE_AMOUNT=25.0

# Sentry (required for production)
# SENTRY_DSN=

