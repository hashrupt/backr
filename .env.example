# =============================================================================
# Database
# =============================================================================
# For Docker local dev: postgresql://backr:backr@localhost:5432/backr
# For production: Use your PostgreSQL connection string
DATABASE_URL="postgresql://backr:backr@localhost:5432/backr"
DIRECT_URL="postgresql://backr:backr@localhost:5432/backr"

# =============================================================================
# Keycloak Authentication (Canton Network)
# =============================================================================
KEYCLOAK_URL="http://localhost:8080"
KEYCLOAK_REALM="backr"
KEYCLOAK_CLIENT_ID="backr-api"

# Vite frontend Keycloak config
VITE_KEYCLOAK_URL="http://localhost:8080"
VITE_KEYCLOAK_REALM="backr"
VITE_KEYCLOAK_CLIENT_ID="backr-web"

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_URL="http://localhost:4001"
CORS_ORIGIN="http://localhost:5173"

# =============================================================================
# Canton Ledger Configuration
# =============================================================================
# Local development (Docker Compose)
CANTON_LEDGER_HOST="localhost"
CANTON_LEDGER_PORT="5011"
CANTON_USE_TLS="false"

# Validator host for scan-proxy API (CIP-56 token operations)
VALIDATOR_HOST="http://localhost:5011"

# Optional: Service account token for admin operations
# CANTON_AUTH_TOKEN=""

# =============================================================================
# Operator Configuration
# =============================================================================
# Operator party ID (set after Canton bootstrap)
# OPERATOR_PARTY_ID=""

# Default fee for app validation (in Amulets)
DEFAULT_FEE_AMOUNT="25.0"

# =============================================================================
# Site Configuration
# =============================================================================
SITE_VARIANT=A
VITE_SITE_VARIANT=A
DAML_MODEL_VERSION=0.1.0
